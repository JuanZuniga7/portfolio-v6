---
import Image from "astro/components/Image.astro";
import sun from "../../assets/svg/profile/theme/sun.svg"
import moon from "../../assets/svg/profile/theme/moon.svg"
---
<figure id="theme2" class="relative w-6 h-6 cursor-pointer">
    <Image id="sun" src={sun} alt="Sun" width={64} height={64} class="w-6 h-6 absolute dark:opacity-100 dark:rotate-180 opacity-0 transition-all duration-700" loading="lazy" />
    <Image id="moon" src={moon} alt="Moon" width={64} height={64} class="w-6 h-6 absolute dark:opacity-0 dark:rotate-180 opacity-100  transition-all duration-700" loading="lazy" />
</figure>
<script>
    const theme = document.getElementById('theme2');
    theme?.addEventListener('click', () => {
        document.body.classList.toggle('dark');
        if(document.body.classList.contains('dark')) {
            localStorage.setItem('theme', 'dark');
        } else {
            localStorage.setItem('theme', 'light');
        }
    });
</script>
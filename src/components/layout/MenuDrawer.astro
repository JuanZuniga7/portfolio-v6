---
import type IProfile from "../../data/types/profile.type";
import profileImage from "../../assets/image/profile.jpg"
import { Image } from "astro:assets";
import { getRelativeLocaleUrl } from "astro:i18n";
interface Props{
    profile:IProfile
    lang:string
}
const {profile, lang}:Props = Astro.props;
---
<nav id="sidebar" class="fixed top-0 left-0 flex flex-col items-center justify-center py-5 transition-all duration-500 ease-linear w-[70vw] sm:w-[45vw] md:w-[35vw] lg:w-[30vw] h-screen xl:hidden bg-white dark:bg-[#282a36] bg-opacity-50 dark:bg-opacity-50 backdrop-blur-md z-50 -translate-x-full gap-4 md:gap-8">
    <Image
        src={profileImage}
        alt="profile"
        width={500}
        height={500}
        class="w-[150px] h-[150px] rounded-full shadow-lg shadow-gray-300 dark:shadow-gray-600"
    />
    <div class="flex flex-col items-center dark:text-white text-lg w-[80%]">
        {profile.items.map((item) => (
            <a href={getRelativeLocaleUrl(lang, item.href)} target="_self" class="py-1 hover:bg-gray-300 dark:hover:bg-indigo-500 w-full text-center rounded-3xl">
                {item.label}
            </a>
        ))}
    </>
    <ul class="flex flex-row flex-wrap items-center justify-center mt-5 sm:mt-10 w-[95%] gap-2">
        {profile.icons.map((icon) =>(
            <li class="">
                <a href={icon.href}>{(<icon.label/>)}</a>
            </li>
        ))}
    </div>
</nav>
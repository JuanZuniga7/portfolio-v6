---
import MobileMenu from "../components/layout/MobileMenu.astro";
import Profile from "../components/layout/Profile.astro";
import MenuDrawer from "../components/layout/MenuDrawer.astro";
import type IProfile from "../data/types/profile.type";
interface Props {
  lang: string;
  page_title: string;
  profile: IProfile;
  over_hidden?: boolean;
}

const { lang, page_title, profile, over_hidden }: Props = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{page_title}</title>
  </head>
  <body
    class="bg-[#e3e9f4] dark:bg-[#1f202a] p-5 overflow-x-hidden overflow-y-auto flex flex-col xl:grid xl:grid-cols-11 gap-5 items-center xl:items-start justify-center w-screen h-screen transition-all duration-300 ease-linear"
  >
    <MenuDrawer profile={profile} />
    <MobileMenu />
    <Profile lang={lang} profile={profile} />
    <main
      class="flex flex-col xl:col-span-9 w-full h-full gap-5 mt-16 xl:mt-0"
    >
      <div
        class="flex flex-col text-black relative overflow-x-hidden dark:text-white col-span-1 xl:col-span-9 w-full h-fit xl:h-full gap-5 border-[1px] border-slate-300 dark:border-slate-800 rounded-2xl items-center bg-white dark:bg-[#282a36] transition-all duration-300 ease-linear"
      >
        <slot />
      </div>
      <footer
        class="col-span-1 xl:col-span-12 text-xs md:text-base flex flex-row w-full h-12 xl:h-14 border-[1px] border-slate-300 dark:border-slate-800 rounded-2xl px-4 py-2 justify-between items-center bg-white dark:bg-[#282a36] text-black dark:text-white transition-all duration-300 ease-linear"
      >
        <span>©2024 Rusted.Cor</span>
        <span>
          Development with
          <span class="text-rose-500">❤️</span>
          by Rusted.Cor
          <span class="hidden lg:flex">
            based in Frosti Template design but not code
          </span>
        </span>
      </footer>
    </main>
    <script>
      if (localStorage.getItem("theme") === "dark") {
        document.body.classList.add("dark");
      }
    </script>
  </body>
</html>
<style is:global>
  .hidde-scroll::-webkit-scrollbar {
    display: none;
  }
</style>

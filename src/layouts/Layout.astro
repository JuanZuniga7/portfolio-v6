---
import MobileMenu from "../components/layout/MobileMenu.astro";
import Profile from "../components/layout/Profile.astro";
import MenuDrawer from "../components/layout/MenuDrawer.astro";
import type IProfile from "../data/types/profile.type";
interface Props {
  lang: string;
  page_title: string;
  section_title: string;
  section_subtitle: string;
  profile: IProfile;
  over_hidden?: boolean;
}

const {
  lang,
  page_title,
  section_title,
  section_subtitle,
  profile,
  over_hidden,
}: Props = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{page_title}</title>
  </head>
  <body
    class="bg-[#e3e9f4] dark:bg-[#1f202a] overflow-x-hidden overflow-y-auto flex flex-col gap-5 items-center justify-center w-screen min-h-screen pb-2 xl:py-5 transition-all duration-300 ease-linear"
  >
  	<MenuDrawer profile={profile} />
  	<MobileMenu/>
    <Profile lang={lang} profile={profile} />
    <main
      class={`flex mt-14 relative hidde-scroll overflow-x-hidden ${over_hidden ? "overflow-y-hidden" : "overflow-y-auto"} flex-col col-span-1 text-black dark:text-white xl:col-span-9 w-full h-fit gap-5 border-[1px] border-slate-300 dark:border-slate-800 rounded-2xl items-center bg-white dark:bg-[#282a36] transition-all duration-300 ease-linear`}
    >
      <slot />
    </main>
    <footer
      class="col-span-1 xl:col-span-9 text-xs flex flex-row w-full h-12 border-[1px] border-slate-300 dark:border-slate-800 rounded-2xl px-4 py-4 justify-between items-center bg-white dark:bg-[#282a36] text-black dark:text-white transition-all duration-300 ease-linear"
    >
      <span>©2024 Rusted.Cor</span>
      <span
        >Development with <span class="text-rose-500">❤️</span> by Rusted.Cor <span
          class="hidden lg:flex"
          >based in Frosti Template design but not code</span
        ></span
      >
    </footer>
    <script>
      if (localStorage.getItem("theme") === "dark") {
        document.body.classList.add("dark");
      }
    </script>
  </body>
</html>
<style is:global>
  .hidde-scroll::-webkit-scrollbar {
    display: none;
  }
</style>

---
import Profile from '../components/layout/Profile.astro';
import type IProfile from "../data/types/profile.type"
interface Props {
	lang: string;
	page_title: string;
	section_title: string;
	section_subtitle: string;
	profile: IProfile
}

const { lang, page_title, section_title, section_subtitle, profile }:Props = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{page_title}</title>
	</head>
	<body class="bg-[#e3e9f4] dark:bg-[#1f202a] overflow-y-auto overflow-x-hidden flex flex-col gap-5 items-center justify-center w-screen h-screen xl:py-5">
		<main class="w-full xl:w-[95%] h-full relative grid grid-cols-1 xl:grid-cols-11 gap-5">
			<Profile lang={lang} profile={profile}/>
			<div class="flex relative hidde-scroll overflow-x-hidden overflow-y-auto flex-col col-span-1 text-black dark:text-white xl:col-span-9 w-full h-full border-[1px] border-slate-300 dark:border-slate-800 rounded-2xl items-center bg-white dark:bg-[#282a36]">
				<slot/>
			</div>
		</main>
		<div class="w-full xl:w-[95%] h-14 relative grid grid-cols-1 xl:grid-cols-11 gap-5">
			<div class="hidden xl:flex xl:col-span-2"></div>
			<footer class="col-span-1 xl:col-span-9 text-xs flex flex-row w-full h-full border-[1px] border-slate-300 dark:border-slate-800 rounded-2xl px-4 py-4 justify-between items-center bg-white dark:bg-[#282a36] text-black dark:text-white">
				<span>©2024 Rusted.Cor</span>
				<span>Development with <span class="text-rose-500">❤️</span> by Rusted.Cor <span class="hidden lg:flex">based in Frosti Template design but not code</span></span>
			</footer>
		</div>
		<script>
			if (localStorage.getItem("theme") === "dark") {
			  document.body.classList.add("dark");
			}
		  </script>
	</body>
</html>
<style is:global>
	.hidde-scroll::-webkit-scrollbar {
		display: none;
	}
</style>